@model List<AnimalQuestionnaire>

<h1>Animals in Shelter</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Species</th>
            <th scope="col">Breed</th>
            <th scope="col">Gender</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>

                <td>
                    @if (!string.IsNullOrEmpty(i.ImageUrl))
                        {
                           <img src="@i.ImageUrl" alt="@i.Name" width="100" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                </td>
                <td>@i.Name</td>
                <td>@i.Age</td>
                <td>@i.Species?.Name</td>
                <td>@i.Breed?.Name</td>
                <td>@i.Gender?.Name</td>
                <td>@i.Description</td>

                <td>
                    <a asp-action="DetailInfo" asp-route-id="@i.Id" class="btn  btn-info fw-bold">
                        Детальніше
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="text-center">
        <img width="500" src="https://cdni.iconscout.com/illustration/premium/thumb/empty-state-concept-illustration-svg-png-download-2902554.png" alt="Empty" />
        <p>No animals found in the shelter</p>
    </div>
}