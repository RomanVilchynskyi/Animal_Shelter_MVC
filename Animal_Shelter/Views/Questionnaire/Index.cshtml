@model List<AnimalQuestionnaire>
@{
    string delDialogId = "deleteConfirm";
    string editDialogId = "editConfirm";
}
<h1>Animals in Shelter</h1>

<a asp-action="Create" class="btn btn-primary my-1">Create New Questionnaire for an animal</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Species</th>
            <th scope="col">Breed</th>
            <th scope="col">Gender</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>

                <td>
                    @if (!string.IsNullOrEmpty(i.ImageUrl))
                        {
                           <img src="@i.ImageUrl" alt="@i.Name" width="100" />
                        }
                        else
                        {
                        <img src="https://thumbs.dreamstime.com/z/no-image-icon-vector-available-picture-symbol-isolated-white-background-suitable-user-interface-element-205805243.jpg" alt="" width="100" />
                        }
                </td>
                <td>@i.Name</td>
                <td>@i.Age</td>
                <td>@i.Species?.Name</td>
                <td>@i.Breed?.Name</td>
                <td>@i.Gender?.Name</td>
                <td>@i.Description</td>

                <td>
                    <a asp-action="DetailInfo" asp-route-id="@i.Id" class="btn btn-outline-info ">
                        Детальніше
                    </a>
                    <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-outline-success">Edit</a>
                    <a data-bs-id=@i.Id data-bs-toggle="modal" data-bs-target="#@delDialogId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="text-center">
        <img width="500" src="https://cdni.iconscout.com/illustration/premium/thumb/empty-state-concept-illustration-svg-png-download-2902554.png" alt="Empty" />
        <p>No animals found in the shelter</p>
    </div>
}

<partial name="_ConfirmDialogPartial" model=@(new ConfirmDialogModel() {
         DialogId = delDialogId,
         Mode = DialogType.danger,
         Message = "Do you want to delete the product?",
         Title = "Delete Confirmation" }) />


@section Scripts
{
    <script>
        configConfirmModal('@delDialogId', '/questionnaire/delete/');
    </script>
}